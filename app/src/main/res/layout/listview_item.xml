<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imView_thumb"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:src="@drawable/shaaaa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>





    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text="title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imView_thumb"
        app:layout_constraintEnd_toEndOf="@+id/imView_thumb"
        app:layout_constraintStart_toStartOf="@+id/imView_thumb" />


</androidx.constraintlayout.widget.ConstraintLayout>